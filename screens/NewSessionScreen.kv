
<NewSessionScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.2
            orientation: 'horizontal'
            Label:
                text: 'Choose Your Language Tutor'

        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Choose language"
                Label:
                    text: "Choose level"
                Label:
                    text: "Choose tutor appearance"
            BoxLayout:
                orientation: 'vertical'
                Label:
                Spinner:
                    id: language_spinner
                    values: ['angielski', 'hiszpanski', 'niderlandzki']
                Label:
                Label:
                Spinner:
                    id: level_spinner
                    values: ['A1', 'A2', 'B1', 'B2', 'C1', 'C2']
                Label:
                Label:
                Spinner:
                    id: appearance_spinner
                    values: ['']
                Label:
            BoxLayout:
        BoxLayout:
            size_hint: 1, 0.2
            orientation: 'horizontal'
            Button:
                text: 'Get back'
                on_release: root.change_screen("main_screen")
            Button:
                #on_release: root.change_screen("session_screen")
                on_release: root.start_new_session()
                text: 'Start new session'