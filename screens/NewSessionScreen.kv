
<NewSessionScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/background.jpg'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.2
            orientation: 'horizontal'
            Label:
                text: 'Wybierz opcje tutora'

        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Wybierz język"
                Label:
                    text: "Wybierz poziom"
                #Label:
                #    text: "Choose tutor appearance"
            BoxLayout:
                orientation: 'vertical'
                Label:
                Spinner:
                    id: language_spinner
                    values: ['angielski', 'hiszpanski', 'niderlandzki']
                Label:
                Label:
                Spinner:
                    id: level_spinner
                    values: ['A1', 'A2', 'B1', 'B2', 'C1', 'C2']
                Label:
                #Label:
                #Spinner:
                #    id: appearance_spinner
                #    values: ['']
                #Label:
            BoxLayout:
        BoxLayout:
            size_hint: 1, 0.2
            orientation: 'horizontal'
            Button:
                text: 'Wróć'
                on_release: root.change_screen("main_screen")
            Button:
                #on_release: root.change_screen("session_screen")
                on_release: root.start_new_session()
                text: 'Rozpocznij nową sesję'