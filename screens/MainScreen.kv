
<MainScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/background.jpg'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5,1
        BoxLayout:
            orientation: 'vertical'
            Label:
            Label:
                text: 'Tutor językowy AI'
            Label:
            Button:
                text: 'Załaduj sesje'
                on_release: root.load_session()
            Label:
            Button:
                on_release: root.change_screen('new_session_screen')
                text: 'Nowa sesja'
            Label:
        BoxLayout:
            size_hint: 0.5,1
            orientation: 'vertical'


